# Root EditorConfig
root = true

# Default for all files
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown: keep trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML (config files)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON / JSONC
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# CSS / SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# JS / JSX / TS / TSX
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Makefiles must use tabs
[Makefile]
indent_style = tab
